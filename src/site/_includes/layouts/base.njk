<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <link rel="preload" href="/fonts/roboto-slab/roboto-slab-v8-latin-regular.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/ruda/ruda-v10-latin-regular.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/icomoon/icomoon.woff" as="font" type="font/woff" crossorigin>
    <link rel="preload" href="/images/avatar.jpg" as="image" type="image/jpeg">
    <link rel="alternate" href="{{ metadata.feed.path }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="manifest" href="/favicon/site.webmanifest">
    <link rel="shortcut icon" href="/favicon/favicon.ico">
    <meta name="apple-mobile-web-app-title" content="SH">
    <meta name="application-name" content="SH">
    <meta name="msapplication-TileColor" content="#282923">
    <meta name="msapplication-config" content="/favicon/browserconfig.xml">
    <meta name="theme-color" content="#282923">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | metatitle(metadata.title) }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="twitter:card" content="summary">
    <meta name="twitter:creator" content="@stvnhrlnd">
    <meta property="og:site_name" content="{{ metadata.title }}">
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:description" content="{{ description or metadata.description }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ page.url | absoluteUrl(metadata.url) }}">
    {% set css %}{% include "css/critical.css" %}{% endset %}
    <style>{{ css | safe }}</style>
  </head>
  <body>
    {% include "components/banner.njk" %}
    {% include "components/nav.njk" %}
    <main>
      {{ content | safe }}
    </main>
    {% include "components/footer.njk" %}
  </body>
</html>
