<ul class="c-post-list">
  {% for post in collections.post | reverse %}
    <li class="c-post-list__list-item">
      <h3 class="c-post-list__post-title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h3>
      <time class="c-post-list__post-date" datetime="{{ post.date | formatdate('yyyy-LL-dd') }}">
        {{ post.date | formatdate }}
      </time>
      <p>{{ post.data.description }}</p>
    </li>
  {% endfor %}
</ul>
